# 本地生产环境配置文件
NODE_ENV=production
PORT=8000

# 数据库配置（使用SQLite进行本地部署）
DB_TYPE=sqlite
DB_PATH=./database.sqlite

# JWT配置
JWT_SECRET=gitviz_local_production_jwt_secret_key_2025
JWT_EXPIRES_IN=7d

# GitHub OAuth配置（可选）
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:8000/api/auth/github/callback

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# 前端配置（本地开发）
PROD_FRONTEND_URLS=http://localhost:3000,http://localhost:5000

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 安全配置
COOKIE_SECURE=false
SESSION_SECRET=gitviz_local_session_secret_2025